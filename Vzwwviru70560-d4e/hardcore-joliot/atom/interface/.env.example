# API Configuration
VITE_ATOM_API_URL=https://api.atom.local
VITE_WS_URL=wss://api.atom.local/ws

# AT·OM Frequency (Hz)
VITE_FREQUENCY=999

# Sovereign Mode
VITE_SOVEREIGN_MODE=true

# Sceau Activation Duration (seconds)
VITE_SCEAU_DURATION=2

# L'Essaim Configuration (226 real agents from registry)
VITE_ESSAIM_SIZE=226

# Zero Log Mode (no personal data storage)
VITE_ZERO_LOG=true

# CORS Allowed Origins (for iPad/Admin Panel)
VITE_CORS_ORIGINS=*

# WebSocket Configuration (Real-time Swarm)
VITE_WS_ENABLED=true
VITE_WS_RECONNECT_INTERVAL=5000

# Debug Mode (disable in production)
VITE_DEBUG=false
