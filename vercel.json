{
  "version": 2,
  "name": "atom-sovereign",
  "builds": [
    {
      "src": "ATOM/AT-OM Core/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://your-digitalocean-backend.ondigitalocean.app/api/$1",
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/ATOM/AT-OM Core/$1"
    }
  ],
  "env": {
    "HEDERA_NETWORK": "@hedera_network",
    "HEDERA_OPERATOR_ID": "@hedera_operator_id",
    "HEDERA_OPERATOR_KEY": "@hedera_operator_key",
    "HEDERA_UR_TOKEN_ID": "@hedera_ur_token_id"
  },
  "regions": ["iad1"],
  "framework": null
}
